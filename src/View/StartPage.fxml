                        </Tab>
                        <Tab fx:id="tabDepartments" text="Avdelningar">
                            <content>
                                <AnchorPane fx:id="tabDepartmentsPane" minHeight="0.0" minWidth="0.0" prefHeight="700.0" prefWidth="800.0" />
