                <Button fx:id="buttonSaveAndExit" layoutX="575.0" layoutY="288.0" mnemonicParsing="false" text="Save &amp; Exit" />
            </children>
        </AnchorPane>
      <AnchorPane fx:id="loginPage" prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: white;">
